<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
</head>

<body>
    <!-- here we are using the ejs to get the data from the variable that we passed from the index.js file -->
    <h1>Url shortner </h1>
    <!-- locals is nothing but the data that is comming from the backend -->
    <%if (locals.id) {%>
        <p>URL generated : http://localhost:8000/url/<%= id %>
        </p>
        <%}%>
            <div>
                <!-- here we are sending form data -->
                <form method="POST" action="/url">
                    <label for="url">Enter your url</label>
                    <!-- here the name is important because we are send this name in backend -->
                    <input type="text" placeholder="https://example.com" name="url">
                    <button type="submit">Generate</button>
                </form>
            </div>
            <div>
                <% if (locals.urls) { %>
                 <table>
                    <thead>
                        <th>Sr no.</th>
                        <th>Short ID</th>
                        <th>Redirect</th>
                        <th>Clicks</th>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%=index+1%></td>
                            <td><%=url.shortId%></td>
                            <td><%=url.redirectUrl%></td>
                            <td><%=url.visitHistory.length%></td>
                        </tr>
                        <% }) %>
                    </tbody>
                 </table>
                <% } %>
            </div>
</body>

</html>